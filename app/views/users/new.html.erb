  <h3>Sign up an account</h3><hr />
  <form name="myform" method="POST" action="/cus_create" onSubmit="return verifyEmail()">
  <table>
  	<tr><td colspan="2">
        <% if params[:p]=="nm"%>
          <%= "Password confirmation doesn't match!"%>
        <% elsif params[:p]=="ts"%>
          <%= "Password length is less than 6 characters!"%>
        <% end %></td></tr>
    <tr><td>Username:</td><td><%= text_field_tag :user_id %></td></tr>
    <tr><td>Password:<br /><span class="small">(Maximum of 6 characers)</span></td><td><%= password_field_tag :password %></td></tr>
    <tr><td>Re-type password:</td><td><%= password_field_tag :password_confirmation %></td></tr>
    <tr><td>Email Address:</td><td><%= text_field_tag :email,'' %></td></tr>
    <tr><td colspan="2" id="submitbtn"><%= image_submit_tag "Design/Submit-Button.png" %></td></tr>
  </table>
  </form>
